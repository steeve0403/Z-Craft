{
  "compilerOptions": {
    "target": "ESNext", // Latest ECMAScript features
    "moduleResolution": "Node", // Node-style module resolution, ideal for bundlers like Vite
    "strict": true, // Enable all strict type-checking options for better code quality
    "esModuleInterop": true, // Compatibility between CommonJS and ES modules
    "skipLibCheck": true, // Skip type-checking of declaration files for faster builds
    "forceConsistentCasingInFileNames": true, // Prevents issues due to file name case discrepancies
    "isolatedModules": true, // Ensures each file is treated as a separate module; necessary for Vite
    "resolveJsonModule": true, // Allows importing JSON modules
    "allowSyntheticDefaultImports": true, // Allow default imports for modules with no default export
    "baseUrl": ".", // Required for path aliases
    "paths": {
      "@/*": ["src/*"], // Alias for ease of importing from 'src' directory
      "@components/*": ["src/components/*"], // Alias for components
      "@utils/*": ["src/utils/*"] // Alias for utility functions
    },
    "jsx": "react"
  },

  "include": ["src"], // Include main source directory
  "exclude": ["node_modules", "dist"] // Exclude dependencies and output directories to prevent unnecessary processing
}

