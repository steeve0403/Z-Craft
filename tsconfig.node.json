{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"], // Updated to match the target year
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Type Checking & Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"], // Alias to load configurations easily
      "@utils/*": ["src/utils/*"] // Alias for utilities
    }
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}

